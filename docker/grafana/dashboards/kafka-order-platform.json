{
  "schemaVersion": 39,
  "title": "Kafka Order Platform",
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Messages Produced (by topic)",
      "targets": [
        { "expr": "sum by (topic,service) (rate(kafka_messages_produced_total[5m]))" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Messages Consumed (by topic)",
      "targets": [
        { "expr": "sum by (topic,service) (rate(kafka_messages_consumed_total[5m]))" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Handler Errors (by service)",
      "targets": [
        { "expr": "sum by (service) (rate(handler_errors_total[5m]))" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Handler Duration p95 (seconds)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le,service) (rate(handler_duration_seconds_bucket[5m])))" }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ],
  "version": 1
}
